
{
  "compilerOptions": { 
    "target": "es6", 
    "module": "commonjs",
    "strict": true, 
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": false,
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"]
    },
    "outDir": "./dist"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/__tests__/*",
    "dist",
    "node_modules"
  ]
}